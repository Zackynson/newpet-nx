{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"experimentalDecorators": true,
		"outDir": "../../dist/out-tsc",
		"module": "commonjs",
		"types": ["node"],
		"emitDecoratorMetadata": true,
		"target": "ES2021",
		"lib": ["ES2021"],
		"removeComments": true,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"incremental": true,
		"skipLibCheck": true
	},
	"exclude": ["**/*.spec.ts", "**/*.test.ts", "jest.config.ts"],
	"include": ["src/**/*.ts"]
}
